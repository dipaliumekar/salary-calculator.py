# salary-calculator.py
print("===========salary calculator==========")
basic_sal=int(input("Enter basic salary :"))
da = 0.25*basic_sal
hra = 0.15*basic_sal
pf = 0.12*(basic_sal+da)
ta = 0.075*basic_sal
net_pay=basic_sal+da+hra+ta
gross_pay=net_pay- pf
print("DA is :",da,"\nHRA is :",hra,"\nPF is :",pf,"\nTA is :",ta,"\nNet pay is:",net_pay,"\nGross pay is:",gross_pay)
